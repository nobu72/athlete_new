= render "template/template_header"

.post__index__main
  .post__index__main__center
    .post__index__main__center__content
      .post__index__main__center__content__title
        %p 最新の投稿
    - @post.each do |post|
      %video{:class=>"post__index__main__center__video",:autoplay => "", :loop => "", :muted => "", :src => "#{post.video}"}
  .post__index__main__right
    - @posts.each do |post|
      .post__index__main__right__text
        =link_to "#{post.text}","/posts/#{post.id}"
      
      
= render "template/template_footer"
